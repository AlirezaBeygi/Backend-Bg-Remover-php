{
	"info": {
		"_postman_id": "bgremover-api-collection",
		"name": "Background Remover API",
		"description": "Collection for testing Background Remover API endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Auth",
			"item": [
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    pm.environment.set(\"token\", jsonData.token);",
									"    console.log(\"Token saved:\", jsonData.token);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"testuser\",\n    \"password\": \"password123\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "http://localhost/backend/public/api/auth/login",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"path": [
								"backend",
								"public",
								"api",
								"auth",
								"login"
							]
						}
					}
				}
			]
		},
		{
			"name": "Background Removal",
			"item": [
				{
					"name": "Remove Background",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "image",
									"type": "file",
									"src": []
								}
							]
						},
						"url": {
							"raw": "http://localhost/backend/public/api/remove-background",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"path": [
								"backend",
								"public",
								"api",
								"remove-background"
							]
						}
					}
				},
				{
					"name": "Get Job Status",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "http://localhost/backend/public/api/job/:jobId/status",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"path": [
								"backend",
								"public",
								"api",
								"job",
								":jobId",
								"status"
							],
							"variable": [
								{
									"key": "jobId",
									"value": "1"
								}
							]
						}
					}
				}
			]
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost/backend/public/api",
			"type": "string"
		}
	]
}

